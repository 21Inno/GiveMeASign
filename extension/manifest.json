{
  "manifest_version": 3,

  "name": "LSFBtranslate",
  "description": "This extension will provide French to sign language translations",
  "version": "1.0.0",
  "author" : "Babacar Sow, Innocent Ye",

  "action": {
   "default_title" : "LSFBtranslate",
   "default_icon": "/static/img/logo1.png",
   "default_popup": "templates/plugin.html"
  },

  "background": 
    {
      "service_worker": "static/js/background.js"
    },

  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
    "host_permissions": [ "<all_urls>" ],

  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["static/css/modal.css"],
      "js": ["static/js/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    { "resources" : ["web/*",
      "assets/*",
      "static/css/*",
      "static/js/*",
      "resources/*"],
      "matches": ["<all_urls>"],
      "extension_ids" : []
    },
    {
      "resources": [ "pyscript.css", "pyscript.js" ],
      "matches": [ "<all_urls>" ],
      "use_dynamic_url": true
    }],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }

}
